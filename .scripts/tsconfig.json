{
    "compilerOptions": {
      "baseUrl": ".",
      "rootDir": ".",
      "target": "ES2020",
      "module": "CommonJS",
      "moduleResolution": "Node",
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "stripInternal": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "useDefineForClassFields": true,
      "strict": true,
      "traceResolution": false,
      "typeRoots": ["node_modules/@types", "src/types"],
      "lib": ["esnext"],
      "types": ["node"]
    },
    "compileOnSave": false
  }